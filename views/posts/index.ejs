          <a href="#" class="button bounce-right-infinite">Read it &rarrlp;</a>
        </article>

        <h4 class="divider-line"><span>Recent Posts</span></h4>
        <% posts.forEach(function(post, index){ %>         
            <% if(posts.length === (index + 1)) { %>
                <article class="post">
                <h2><%= post.name %></h2>
                <a href="/posts/<%= post._id %>" class="th"><img alt="funny but true comic" src="<%= post.image %>"></a>
                <p class="subheader">
                  By <a href="#"><%= post.author.username %></a> 
                </p>
                <p class="subheader"><em><%- post.date.getMonth() + 1 %>/<%- post.date.getDate() %>/<%- post.date.getFullYear() %></em></p>
                <p><%- post.body.substring(0,300) %> . . .</p>
                <a href="/posts/<%= post._id %>" class="button bounce-right-infinite">Read it &rarrlp;</a>
            </article>
            <% } else { %>
            <article class="post">
                <h2><%= post.name %></h2>
                <a href="/posts/<%= post._id %>" class="th"><img alt="funny but true comic" src="<%= post.image %>"></a>
                <p class="subheader">
                  By <a href="#"><%= post.author.username %></a>
                </p>
                <p class="subheader"><em><%- post.date.getMonth() %>/<%- post.date.getDate() %>/<%- post.date.getFullYear() %></em></p>
                <p><%- post.body.substring(0,300) %> . . .</p>
                <a href="/posts/<%= post._id %>" class="button bounce-right-infinite">Read it &rarrlp;</a>
            </article>
            <hr class="article-break">
            <% } %>
        <% }) %>

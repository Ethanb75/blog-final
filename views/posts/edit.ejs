<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit "<%= post.name %>"</h1>
        <div class="medium-12 columns">
            <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="post[name]" value="<%= post.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="post[image]" value="<%= post.image %>">
                </div>
                <div class="form-group">
                    <textarea rows="10" class="form-control" type="text" name="post[body]"><%= post.body %></textarea>
                </div>
                <div class="form-group">
                    <button class="button hollow">Submit!</button>
                </div>
            </form>
            <a href="/posts" class="left bounce-left-infinite">&laquo Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
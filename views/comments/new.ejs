<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Comment to <%= post.name %></h1>
        <div style="width: 70%; margin: 25px auto;">
            <form action="/posts/<%= post._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
              
                <div class="form-group">
                    <a class="button expanded hollow" href="#">Such Expand</a>
                </div>
            </form>
            <a href="/posts">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

